{
  "manifest_version": 3,
  "name": "Clipboard Manager Pro",
  "version": "1.0.0",
  "description": "Advanced clipboard manager with favorites and themes. Boost your productivity.",
  "permissions": ["storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Clipboard Manager Pro"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.svg"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "author": "SabalDev",
  "minimum_chrome_version": "88"
}
